<div class="container">
  <div class="row">
    <div class="total-box col-md-3">
      <%= number_to_currency(today_amount, precision: 0) %>
      <span>HOY</span>
    </div>
    <div class="total-box col-md-3">
      <%= number_to_currency(yesterday_amount, precision: 0) %>
      <span>AYER</span>
    </div>
    <div class="total-box col-md-3">
      <%= number_to_currency(actually_month_amount, precision: 0) %>
      <span>ESTE MES</span>
    </div>
    <div class="total-box col-md-3">
      <%= number_to_currency(last_month_amount, precision: 0) %>
      <span>MES PASADO</span>
    </div>
  </div>

  <div class="row" style="margin-top: 40px;">
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Últimos 6 Meses</div>
        <div class="panel-body">
          <div id="expenses-chart" style="height: 250px;">
            <%= column_chart @monthly_data, stacked: true, prefix: "$", thousands: ",", height: "250px"%>
          </div>
        </div>
      </div>
    </div>
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Por Día</div>
        <div class="panel-body">
          <div id="daily-expenses-chart" style="height: 250px;">
            <%= column_chart @daily_data, stacked: true, prefix: "$", height: "250px", thousands: "," %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row" style="margin-top: 10px;">
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Por Tipo</div>
        <div class="panel-body">
          <div id="category-chart" style="height: 250px;">
            <%= pie_chart @types_data, prefix: "$", thousands: ",", height: "250px", donut: true %>
          </div>
        </div>
      </div>
    </div>
    <div class=" box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Por Categoría</div>
        <div class="panel-body">
          <div id="month-acc" style="height: 250px;">
            <%= pie_chart @categories_data, prefix: "$", thousands: ",", height: "250px", donut: true %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
