<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h4>Crear Gasto</h4>
      <%= form_for @expense do |f| %>


        <div class="form-group col-md-6">
          <%= select_tag :type, options_for_select(Expense.types), class: "form-control"%>
        </div>
        <div class="form-group col-md-6">
          <%= f.date_field :date, class: "form-control", placeholder: "Fecha"%>
        </div>
        <div class="form-group col-sm-12">
          <%= f.text_field :concept, class: "form-control", placeholder: "Concepto"%>
        </div>
        <div class="form-group col-md-6">
          <%= select_tag :category, options_for_select(Expense.categories), class: "form-control"%>
        </div>
        <div class="form-group col-md-6">
          <%= f.number_field :amount, class: "form-control", placeholder: "Cantidad" %>
        </div>
        <div>
          <%= f.submit "Crear Gasto", class: "btn btn-primary btn-lg btn-block"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
